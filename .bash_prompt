# customize bash prompt

# prompt colors
red="\[$(tput setaf 1)\]"
green="\[$(tput setaf 2)\]"
yellow="\[$(tput setaf 3)\]"
blue="\[$(tput setaf 4)\]"
magenta="\[$(tput setaf 5)\]"

reset="\[$(tput sgr0)\]"

# add git features on bash prompt
parse_git_branch() {
	git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

export PS1="${yellow}\\u${reset}@${green}\\h${reset}:\\W${red}\$(parse_git_branch)${reset} \\n${magenta}\$${reset} "
